<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.dauhuthom.greennote">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="._MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ServiceActivity"
            android:label="@string/service_name" />
        <activity
            android:name=".AddServiceActivity"
            android:label="@string/add_service_name" />
        <activity
            android:name=".EditServiceActivity"
            android:label="@string/edit_service_name" />
        <activity
            android:name=".AddNoteActivity"
            android:label="@string/add_note_name" />
        <activity
            android:name=".EditNoteActivity"
            android:label="@string/edit_note_name" />
        <activity
            android:name=".StatisticalActivity"
            android:label="@string/statistical_name" />
        <activity
            android:name=".NoteActivity"
            android:label="@string/note_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/about_name" />
        <activity
            android:name=".SettingActivity"
            android:label="@string/setting_name" />
        <activity
            android:name=".OtherActivity"
            android:label="@string/other_name"/>
    </application>

</manifest>