<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_note"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.dauhuthom.greennote.AddNoteActivity">

    <EditText
        android:layout_width="wrap_content"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/etCost"
        android:inputType="number"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/spinnerServiceID"
        android:layout_alignStart="@+id/spinnerServiceID" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="textCapWords|textCapSentences"
        android:ems="10"
        android:id="@+id/etDescription"
        android:layout_below="@+id/spinnerServiceID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/spinnerServiceID"
        android:layout_below="@+id/etCost"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/etDescription"
        android:layout_alignStart="@+id/etDescription" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etDate"
        android:layout_alignLeft="@+id/etDescription"
        android:layout_alignStart="@+id/etDescription"
        android:layout_toLeftOf="@+id/btnChangeDate"
        android:layout_toStartOf="@+id/btnChangeDate"
        android:layout_below="@+id/etDescription" />

    <TextView
        android:text="Số tiền"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/etCost"
        android:layout_alignBottom="@+id/etCost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Mô tả ngắn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/etDescription"
        android:layout_alignBottom="@+id/etDescription"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="20dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Mục chi tiêu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="20dp"
        android:layout_above="@+id/etDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Ngày"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignBaseline="@+id/etDate"
        android:layout_alignBottom="@+id/etDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="38dp"
        android:id="@+id/btnChangeDate"
        android:background="@drawable/calendar"
        android:layout_height="38dp"
        android:layout_below="@+id/etDescription"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Lưu"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="23dp"
        android:id="@+id/btnSave"
        android:background="@color/colorNote2"
        android:drawableStart="@android:drawable/ic_menu_save"
        android:layout_below="@+id/etDate"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
